<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andy.base">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!--<application android:name=".common_utils.App"/>-->
    <application
        android:name=".common_utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.andy.base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--登陆界面-->
        <activity android:name=".LoginAct" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="base.andy.com" android:scheme="app"/>
            </intent-filter>
        </activity>
        <activity android:name="com.andy.base.ShotDetailAct"/>
        <activity android:name=".UserInfoAct">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="base.andy.com" android:scheme="aa"/>
            </intent-filter>
        </activity>
        <activity android:name=".TestAct"/>
    </application>

</manifest>